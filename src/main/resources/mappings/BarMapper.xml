<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="tinkoff.tourism.dao.sights.BarRepository">

    <insert id="addSight" parameterType="tinkoff.tourism.model.sights.Bar">
        INSERT INTO bars (name, type, x_coordinate, y_coordinate, description, site_link, open_time, close_time, price, for_adults)
        VALUES (#{name}, #{type}, #{coordinateX}, #{coordinateY}, #{description}, #{siteLink}, #{openTime}, #{closeTime}, #{price}, #{forAdults})
    </insert>

    <select id="findAll" resultMap="BarMap">
        SELECT *
        FROM bars
    </select>

    <select id="findById" resultMap="BarMap">
        SELECT *
        FROM bars
        WHERE bars.id = #{id}
    </select>

    <select id="findByName" resultMap="BarMap">
        SELECT *
        FROM bars
        WHERE bars.name = #{name}
    </select>

    <select id="findByDistance" resultMap="BarMap">
        SELECT *
        FROM bars
        <![CDATA[
        WHERE (bars.x_coordinate - #{x})*(bars.x_coordinate - #{x}) + (bars.y_coordinate - #{y})*(bars.y_coordinate - #{y}) <= #{distance}*#{distance}
        ]]>
    </select>

    <select id="findByCocktailsForAdults" resultMap="BarMap">
        SELECT *
        FROM bars
        WHERE bars.for_adults = #{forAdults}
    </select>

    <update id="updateSight" parameterType="tinkoff.tourism.model.sights.Bar">
        UPDATE bars
        SET NAME        = #{name},
            TYPE        = #{type},
            X_COORDINATE = #{coordinateX},
            Y_COORDINATE = #{coordinateY},
            DESCRIPTION = #{description},
            SITE_LINK = #{siteLink},
            OPEN_TIME = #{openTime},
            CLOSE_TIME = #{closeTime},
            PRICE = #{price},
            FOR_ADULTS = #{forAdults}
        WHERE ID = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Long">
        DELETE
        FROM bars
        WHERE ID = #{id}
    </delete>

    <delete id="deleteAll">
        DELETE
        FROM bars
    </delete>

    <resultMap id="BarMap" type="tinkoff.tourism.model.sights.Bar">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="coordinateX" column="x_coordinate"/>
        <result property="coordinateY" column="y_coordinate"/>
        <result property="description" column="description"/>
        <result property="siteLink" column="site_link"/>
        <result property="openTime" column="open_time"/>
        <result property="closeTime" column="close_time"/>
        <result property="price" column="price"/>
        <result property="forAdults" column="for_adults"/>
    </resultMap>

</mapper>